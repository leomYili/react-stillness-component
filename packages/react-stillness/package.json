{
  "name": "react-stillness-component",
  "version": "0.1.0",
  "description": "This package makes react-component static, with all dom operations disabled and invisible, and supports hook as well as class-component",
  "bugs": {
    "url": "https://github.com/leomYili/react-stillness-component/issues"
  },
  "homepage": "https://github.com/leomYili/react-stillness-component#readme",
  "main": "dist/index.js",
  "module": "es/index.ts",
  "scripts": {
    "clean": "rimraf dist && rimraf es"
  },
  "keywords": [
    "react-component"
  ],
  "author": "leomyili",
  "license": "MIT",
  "files": [
    "dist",
    "es"
  ],
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2",
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "peerDependencies": {
    "@types/hoist-non-react-statics": ">= 3.3.1",
    "@types/node": ">= 12",
    "@types/react": ">= 16",
    "react": ">= 16.14"
  },
  "rollup": {
    "input": "src/index.ts",
    "output": [
      {
        "file": "dist/index.js",
        "format": "umd",
        "name": "ReactStillness",
        "globals": {
          "react": "React",
          "react-dom": "ReactDOM"
        }
      },
      {
        "file": "es/index.ts",
        "format": "es",
        "name": "ReactStillness",
        "globals": {
          "react": "React",
          "react-dom": "ReactDOM"
        }
      }
    ],
    "external": [
      "react",
      "react-router-dom",
      "invariant",
      "hoist-non-react-statics"
    ]
  }
}
