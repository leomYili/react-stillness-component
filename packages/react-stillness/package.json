{
  "name": "react-stillness-component",
  "version": "0.8.1",
  "description": "This package makes react-component static, with all dom operations disabled and invisible, and supports hook as well as class-component",
  "bugs": {
    "url": "https://github.com/leomYili/react-stillness-component/issues"
  },
  "homepage": "https://github.com/leomYili/react-stillness-component#readme",
  "main": "dist/index.js",
  "module": "es/index.ts",
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest"
  },
  "keywords": [
    "react-component",
    "keep-alive"
  ],
  "author": "leomyili",
  "license": "MIT",
  "publishConfig": {
    "main": "dist/index.js",
    "module": "es/index.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "hoist-non-react-statics": "^3.3.2",
    "invariant": "^2.2.4",
    "redux": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/react": "^17.x",
    "@types/react-dom": "^17.x",
    "react": "^17.x",
    "react-dom": "^17.x"
  },
  "peerDependencies": {
    "@types/hoist-non-react-statics": ">= 3.3.1",
    "@types/node": ">= 12",
    "@types/react": ">= 16",
    "react": ">= 16.14"
  },
  "resolutions": {
    "@types/react": "17.x",
    "@types/react-dom": "17.x"
  },
  "rollup": {
    "input": "src/index.ts",
    "output": [
      {
        "file": "dist/index.js",
        "format": "umd",
        "name": "ReactStillness",
        "globals": {
          "react": "React",
          "react-dom": "ReactDOM"
        }
      }
    ],
    "external": [
      "react",
      "react-dom"
    ]
  }
}
